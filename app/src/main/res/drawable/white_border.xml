<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@drawable/ic_background1"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        />
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="10dp"
                android:color="#FFFFFF" >
            </stroke>

            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="20dp"   >
            </corners>

        </shape>
    </item>
</layer-list>
